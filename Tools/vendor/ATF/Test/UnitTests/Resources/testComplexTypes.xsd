      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="attr2" type="xs:integer" default="2"/>
  </xs:complexType>

  <xs:complexType name="complexType3">
    <xs:complexContent>
      <xs:extension base="complexType2">
        <xs:sequence>
          <xs:element name="elem1" type="complexType1">
            <xs:annotation>
              <xs:appinfo>
                <annotation/>
              </xs:appinfo>
