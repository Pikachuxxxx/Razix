  </xs:simpleType>

  <xs:simpleType name="vector3Type">
    <xs:restriction base="floatListType">
      <xs:length value="3"></xs:length>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="complexType7">
    <xs:sequence minOccurs="3" maxOccurs="3">
